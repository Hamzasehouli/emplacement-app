extends base

block content
    section.section-signup 
        form.form.signup-form
            h2 Sign up
            div.form__control
                input.form__input#email(placeholder="Email" type="email")
            div.form__control
                input.form__input#password(placeholder="Password" type="password")
            button.btn-flat(style="margin-right:10px" type="submit") Sign up 
            a(href="/signup") Login 
extends base

block content
    section.section-questions
        if(questions && questions.length !== 0)
            ul.questions__list
                //- a(style="text-decoration:none;color:inherit" href="#")  
                for question in questions
                    li().questions__item 
                        .questions__info 
                            p(style="color: black;").questions__owner #{question.user[0].email}
                            p(style="font-style: italic;").questions__date #{new Intl.DateTimeFormat('en-US', {weekday:'short',month:'short',hour:'numeric',minute:'numeric'}).format(question.created)}
                            p(style="margin-right:auto").questions__distance #{Math.round(question.dist.calculated /1000)} km
                            //- button(type="button" style="font-size:2rem;color:var(--color-primary)") ‚ù§
                        p.questions__title #{question.title}
                        article.questions__content #{question.content}
                        button(style="margin-right:1.5rem" type="button" data-id=question._id).btn-flat.questions__response.show-response Answer the question
                        button( data-dist=question.dist.calculated data-userid=user.id data-questionId=question._id style="margin-right:1.5rem").questions__like üëçüèª add to favourits
                        //- button.questions__expand ‚ûï expand content
                        //- form.form-response.hidden()
                        form.form-response.hidden(data-type=question.location.type data-lng=question.location.coordinates[0] data-lat=question.location.coordinates[1] data-questionId=question._id data-user=question.user[0]._id  data-userId=user._id )
                            textarea.response-area
                            button(type="submit" data-questionId=question._id data-user=question.user[0]._id  data-userId=user._id).btn-flat.send-response Send
        else 
            p There are no quetions near you yet                 
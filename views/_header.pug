nav.nav 
    a.logo(href="/")
        img.logo-img(style="width:90px;height:30px;object-fit:cover" src="/logo.png", alt="sehouli-emplacement-logo")
    form.form-search
        input.searchInput(type="text" placeholder="search" data-userid=user && user.id)
        ul.search__list        
       
    ul.nav__list
        if(!user)
            li.nav__item 
                a.nav__link(href="/login") Login  
            li.nav__item 
                a.nav__link(href="/signup") Signup 
        else
            
            li.nav__item 
                span( style="display:inline;cursor:pointer").nav__link.logout Logout  
            li.nav__item 
                a( style="display:inline;cursor:pointer" href="/favorites").nav__link.favourits Favourits  
            li.nav__item 
                p.nav-email #{user.email}  
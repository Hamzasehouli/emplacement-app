extends base

block content
    section.section-questions
        if(questions && questions.length !== 0)
            ul.questions__list
                //- a(style="text-decoration:none;color:inherit" href="#")  
                for question in questions
                    li().questions__item 
                        .questions__info 
                            p(style="color: black;").questions__owner #{question.user.email}
                            p(style="font-style: italic;").questions__date #{new Intl.DateTimeFormat('en-US', {weekday:'short',month:'short',hour:'numeric',minute:'numeric'}).format(question.addedAt)}
                            p(style="margin-right:auto").questions__distance #{Math.round(question.dist /1000)} km
                            //- button(type="button" style="font-size:2rem;color:var(--color-primary)") ‚ù§
                        p.questions__title #{question.question.title}
                        article.questions__content #{question.question.content}
                        button(style="margin-right:1.5rem" type="button" data-id=question.question._id).btn-flat.questions__response.show-response Answer the question
                        //- button.questions__expand ‚ûï expand content
                        //- form.form-response.hidden()
                        form.form-response.hidden( data-questionId=question.question._id data-userId=user._id )
                            textarea.response-area
                            button(type="submit").btn-flat.send-response Send
        else 
            p There are no quetions near you yet                 
